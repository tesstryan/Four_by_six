<div class="create_your_own">
  
  <h2>Create your own.</h2>

</div>


<section class="layout">

  <div class="left_left">
    

  </div>

  <div class="left_half">
    <%= form_tag(quotes_url, method: 'post') do %>

    <h4 class="option_header one">Choose template</h4>
<!-- Radio buttons for templates -->

    <ul>
      <li class="template"><%= radio_button_tag("template", "america") %>
      <%= label_tag(:template, "America") %></li>
      <li class="template"><%= radio_button_tag("template", "quote") %>
      <%= label_tag(:template, "Quote") %></li>
      <li class="template"><%= radio_button_tag("template", "america") %>
      <%= label_tag(:template, "America") %></li>
      <li class="template"><%= radio_button_tag("template", "java") %>
      <%= label_tag(:template, "America") %></li>
      <li class="template"><%= radio_button_tag("template", "rails") %>
      <%= label_tag(:template, "America") %></li>
      <li class="template"><%= radio_button_tag("template", "java") %>
      <%= label_tag(:template, "America") %></li>
    </ul>
<!-- End radio buttons for templates -->

    <h4 class="option_header color">Choose color</h4> 

    <ul>
      <li class="color_red"><%= radio_button_tag(:color, "red") %></li>
      <li class="color_yellow"><%= radio_button_tag(:color, "yellow") %></li>
      <li class="color_green"><%= radio_button_tag(:color, "green") %></li>
      <li class="color_aqua"><%= radio_button_tag(:color, "aqua") %></li>
    </ul>

    <h4 class="option_header">Text:</h4>
    
      <div>
        <%= text_area_tag :content, nil, placeholder: "Words of wisdom go here...", class: "input_quote" %>
      </div>

<!--       <div>
        <%= number_field_tag :user_id, nil, class: "input" %>
      </div>  -->

      <div>
        <%= submit_tag "Create card", class: "create_card_button" %>
      </div>
    <% end %>
  </div>

  <div class="right_half">
    <div class="card_box">
      <% if @quote.present? %>
          <div class="card_outline">
  
            <div class="<%= @quote.template %> offset">

              <div class="<%= @quote.color %> text_over_8">
                <% current_quote = simple_format(@quote.content) %>
                <%= current_quote %>
             </div>  

            </div>  

  </div>

<%= link_to "Export to PDF", download_quote_url(:quote => @quote, format: 'pdf', :class => "export_to_pdf") %>

      <% else %>

      <h3 class="start_creating"> start creating your masterpiece</h3>

      <% end %>
    </div>
  </div>

</section>

