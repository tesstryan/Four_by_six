<div class="create_page">

<div class="create_your_own">
  
  <h2>Create your own.</h2>

</div>


<section class="layout">

  <div class="left_left">
    

  </div>

  <div class="left_half">
    <%= form_tag(quotes_url, method: 'post') do %>

    <h4 class="option_header one">Choose template</h4>

    <ul>
      <li><input type="radio" name ="template" value="blank" ng-model='template'> Blank </li>
      <!-- <li><input type="radio" name ="template" value="america" ng-model='template'> America </li> -->
    </ul>
<!-- End radio buttons for templates -->

    <h4 class="option_header">Text:</h4>
    
    <div>
      <textarea type="text" ng-model="cardText" placeholder="Words go here..." name="content" class='input_quote'></textarea>

    </div>

    <h4 class="option_header">Font Size</h4>

      <fieldset>
         <input type="radio" name ="font_size" value="teeny" ng-model='fontSize'> Teeny
         <input type="radio" name ="font_size" value="small" ng-model='fontSize'> Small
         <input type="radio" name ="font_size" value="normal" ng-model='fontSize'> Normal
         <input type="radio" value="big" name ="font_size" ng-model='fontSize'> Big
         <input type="radio" value="bigger" name ="font_size" ng-model='fontSize'> Bigger
         <input type="radio" value="gigantic" name ="font_size" ng-model='fontSize'> Gigantic
      </fieldset>

    <h4 class="option_header color">Choose color</h4>


      <fieldset>
         <li class="color_black"><input type="Radio" name ="color"  value="black" ng-model='color'></li>
         <li class="color_white"><input type="Radio" name ="color"  value="white" ng-model='color'></li>
         <li class="color_red"><input type="radio" name ="color" value="red" ng-model='color'> </li>
         <li class="color_blue"><input type="radio" name ="color"  value="blue" ng-model='color'></li>
         <li class="color_yellow"><input type="radio" name ="color"  value="yellow" ng-model='color'></li>
         <li class="color_green"><input type="radio" name ="color"  value="green" ng-model='color'></li>
         <li class="color_gray"><input type="radio" name ="color"  value="gray" ng-model='color'></li>
      </fieldset>

    <h4 class="option_header color">Choose Font</h4>
      <fieldset>

         <input type="radio" name ="font" value="sail" ng-model='fontFamily'>
         <span class="sail"> Sail </span>

         <input type="radio" name ="font" value="georgia" ng-model='fontFamily'>
         <span class="georgia"> Georgia </span>

         <input type="radio" name ="font" value="lato" ng-model='fontFamily'>
         <span class="lato"> Lato </span>

         <input type="radio" name ="font" value="lobster" ng-model='fontFamily'>
         <span class="lobster"> Lobster </span>

      </fieldset>

    <h4 class="option_header color">Alignment</h4>

      <fieldset>
         <input type="radio"  name ="alignment" value="left" ng-model='textAlign'> Left 
         <input type="radio"  name ="alignment" value="center" ng-model='textAlign'> Center 
         <input type="radio"  name ="alignment" value="right" ng-model='textAlign'> Right 
      </fieldset>

    <div>
      <%= submit_tag "Create card", class: "create_card_button" %>
    </div>

    <% end %>
  </div>

  <!-- Right Half of page -->

  <div class="right_half">
    <div class="card_box" ng-class="template">
        
        <div ng-class="[color, template, fontSize, fontFamily, textAlign]" ng-bind-html="cardText | newlines" ></div> 
      
    </div>
  </div>

</section>

</div>