<div class="page_center">

	<div class="show_left">
		<div class="card_box_show">		
		
				<div class="<%= @quote.color %> <%= @quote.font_size %> <%= @quote.font %> <%= @quote.alignment %>" >
					<% current_quote = @quote.content.gsub(/(?:\n\r?|\r\n?)/, '<br>').html_safe %>
					<%= current_quote %>
			
			</div>	
		</div>
	</div>

	<div class="show_right">
		<div class="bottom_links">
			<ul>
				
				<li><h4>Export Options</h4><div class="export">
					<%= link_to "Export to PDF", download_quote_url(:quote => @quote, format: 'pdf') %>
				</div>

				<% if current_user.nil? %>
					<li><h4>Save card to your profile</h4><div class="export">
						 <%= link_to "Save Card", new_user_registration_url(:quote_id => @quote.id) %> 
					</div></li>	
				<% end %>

				<li><h4>Just want to make another?</h4><div class="export">
					<%= link_to "Make Another!", quotes_url %>
				</div></li>					
			</ul>
		</div>
	
	</div>

</div>