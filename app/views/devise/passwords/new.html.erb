<div class="wrap">
	<section class="form">
		<div class="form_layout">
			<h2 class="sign_header"><h2>Password</h2>

		<div class="sign_input">
			<p class="sign_text">Forgot your password? No problem! Type in your email below and we will send you an email with reset instructions.</p>
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		  <p><%= devise_error_messages! %></p>

		  <div>
		  <%= f.email_field :email, :autofocus => true, placeholder: "Email Address", class: "box_input" %></div>

		  <div><%= f.submit "Submit", class: "sign_button" %></div>
		<% end %>

		<p class="other_text"><%= render "devise/shared/links" %></p>
		</div>
		</div>
	</section>
</div>